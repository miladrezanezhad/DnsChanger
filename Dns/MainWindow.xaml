<Window x:Class="Dns.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DNS Changer" Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="#00C800" Icon="/Power.png">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

            <!-- عنوان -->
            <TextBlock Text="Choose a DNS provider"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,10"/>

            <!-- ComboBox -->
            <ComboBox x:Name="dnsComboBox"
                      FontSize="16"
                      FontWeight="Bold"
                      Foreground="#00C800"
                      Background="White"
                      Width="250"
                      Margin="0,10"
                      SelectionChanged="dnsComboBox_SelectionChanged">

                <ComboBoxItem Content="رادار" Tag="10.202.10.10;10.202.10.11"/>
                <ComboBoxItem Content="سرویس 403" Tag="10.202.10.202;10.202.10.102"/>
                <ComboBoxItem Content="بگذر" Tag="185.55.226.26;185.55.225.25"/>
                <ComboBoxItem Content="شکن" Tag="178.22.122.100;185.51.200.2"/>
                <ComboBoxItem Content="کاربران شاتل" Tag="85.15.1.14;85.15.1.15"/>
                <ComboBoxItem Content="الکترو" Tag="78.157.42.100;78.157.42.101"/>
                <ComboBoxItem Content="هاستیران" Tag="172.29.2.100;172.29.2.100"/>
                <ComboBoxItem Content="Server ir" Tag="194.104.158.48;194.104.158.78"/>
                <ComboBoxItem Content="Level3" Tag="209.244.0.3;209.244.0.4"/>
                <ComboBoxItem Content="Open DNS" Tag="208.67.222.222;208.67.220.220"/>
                <ComboBoxItem Content="مخابرات، شاتل، آسیاتک، رایتل" Tag="91.239.100.100;89.233.43.71"/>
                <ComboBoxItem Content="پارس آنلاین" Tag="46.224.1.221;46.224.1.220"/>
                <ComboBoxItem Content="همراه اول" Tag="208.67.220.200;208.67.222.222"/>
                <ComboBoxItem Content="ایرانسل (1)" Tag="109.69.8.51;0.0.0.0"/>
                <ComboBoxItem Content="ایرانسل (2)" Tag="74.82.42.42;0.0.0.0"/>
                <ComboBoxItem Content="مخابرات (1)" Tag="8.8.8.8;8.8.4.4"/>
                <ComboBoxItem Content="مخابرات (2)" Tag="4.4.4.4;4.2.2.4"/>
                <ComboBoxItem Content="مخابرات (3)" Tag="195.46.39.39;195.46.39.40"/>
                <ComboBoxItem Content="مبین نت" Tag="10.44.8.8;8.8.8.8"/>
                <ComboBoxItem Content="سایر اپراتورها" Tag="199.85.127.10;199.85.126.10"/>
                <ComboBoxItem Content="سوئیس" Tag="176.10.118.132;176.10.118.133"/>
                <ComboBoxItem Content="کویت" Tag="94.187.170.2;94.187.170.3"/>
                <ComboBoxItem Content="اسپانیا" Tag="195.235.194.7;195.235.194.8"/>
                <ComboBoxItem Content="تاجیکستان" Tag="45.81.37.0;45.81.37.1"/>

            </ComboBox>

            <!-- نمایش انتخاب -->
            <TextBlock x:Name="selectedDnsText"
                       FontSize="14"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,10"/>

            <!-- دکمه اتصال -->
            <Button x:Name="connectButton"
                    Content="اتصال"
                    Width="200"
                    Height="50"
                    Background="White"
                    Foreground="#00C800"
                    FontSize="16"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Margin="0,20"
                    Click="connectButton_Click"/>
            <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0">
    <Hyperlink NavigateUri="https://github.com/miladrezanezhad"
               RequestNavigate="Hyperlink_RequestNavigate"
               Foreground="White"
               FontWeight="Bold">
        Github: DNS Changer
    </Hyperlink>
            </TextBlock>

        </StackPanel>
        
    </Grid>
</Window>
